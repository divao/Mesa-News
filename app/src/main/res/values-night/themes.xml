<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MesaNews" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryDarkTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryDarkTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/primaryDarkTextColor</item>
        <item name="android:toolbarStyle">@style/Theme.MesaNews.ToolbarTheme</item>
        <item name="imageButtonStyle">@style/Theme.MesaNews.ImageButtonTheme</item>
    </style>

    <style name="Theme.MesaNews.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MesaNews.ToolbarTheme">
        <item name="titleTextColor">@color/primaryDarkTextColor</item>
        <item name="android:textColor">@color/primaryDarkTextColor</item>
    </style>

    <style name="Theme.MesaNews.ImageButtonTheme">
        <item name="tint">@color/primaryDarkTextColor</item>
    </style>

    <style name="Theme.MesaNews.CardViewTheme">
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
    </style>
</resources>